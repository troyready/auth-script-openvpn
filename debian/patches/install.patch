Description: Add make install target
 Upstream Makefile has no install target.
Author: Troy Ready <troy@troyready.com>
--- a/Makefile
+++ b/Makefile
@@ -8,5 +8,9 @@ all: plugin
 plugin: auth_script.c
 	$(CC) $(CFLAGS) $(LDFLAGS) -I/usr/include/openvpn -o auth_script.so auth_script.c
 
+install:
+	install -d $(DESTDIR)/usr/lib/openvpn
+	install ./auth_script.so $(DESTDIR)/usr/lib/openvpn
+
 clean:
 	rm -f *.o *.so
